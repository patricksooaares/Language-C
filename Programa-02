#include <stdio.h>
int main()
{
char c;
int i;
float f;
double d;
unsigned char uc;
printf("Tamanho das variaveis\n");
printf("=====================\n\n");
printf("Variavel c = %d Byte(s)\n", sizeof(c));
printf("Variavel i = %d Byte(s)\n", sizeof(i));
printf("Variavel f = %d Byte(s)\n", sizeof(f));
printf("Variavel d = %d Byte(s)\n", sizeof(d));
printf("Variavel uc = %d Byte(s)\n\n", sizeof(uc));
return 0;
}
